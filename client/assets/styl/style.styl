@import 'variables.styl'

// General

*
	box-sizing border-box
	

body 
	font-family main
	margin 0
	color dark-grey

p, li
	line-height 1.5


.ng-enter.page-landing
	animation slideInLeft 0.1s both ease-out
	position absolute
	top 0
	left 0
	width 320px
.ng-leave.page-landing
	animation slideOutLeft 0.1s both ease-out
	position absolute
	top 0
	left 0
	width 320px
.ng-enter.page-login, .ng-enter.page-reg
	animation slideInRight 0.1s both ease-out
	position absolute
	top 0
	left 0
	width 320px
.ng-leave.page-login, .ng-leave.page-reg
	animation slideOutRight 0.1s both ease-out
	position absolute
	top 0
	left 0
	width 320px
	
	
.shell
	height 100vh
	
	// Landing view

	.landing-view
		display flex
		flex-direction column
		justify-content space-between
		margin 0 auto
		max-width 100%
		min-height 100%
		background light-grey
			
		.wrapper
			margin 0 auto
			width 300px
			padding 20px 20px 0 20px
			
			.logo
				margin 0 auto 
				max-width 80px	
				
			svg
				max-width 270px
						
			.btn
				background blue
				color light-grey
				font-size 1em
				font-weight bold
				text-align center
				line-height 25px
				padding 10px 0
				text-decoration none
				border-radius 3px
				box-shadow none
				display block
				width 250px
				margin 1em auto 0 auto
				border none
				
	footer
		width 100%
				
		div
			display flex
			justify-content space-between
			align-items center
			max-width 250px	
			margin 0 auto
		
			.fa
				font-size 2.5em
				
			.fa-twitter-square
				color #00aced
				
			.fa-facebook-official
				color #3b5998
				
	// Forms: Login view/Register view
	
	.form-view
		display flex
		flex-direction column
		justify-content space-between
		margin 0 auto
		max-width 100%
		min-height 100%
		background light-grey
		
		.custodes-logo
			height 100px
			
		.content
			height 410px
			
		.wrapper
			margin 0 auto
			width 300px
			padding 20px 20px 0 20px
			
			.logo
				margin 0 auto 2em auto
				max-width 80px
			
			h1
				text-align center
				margin 0	
				
			.form-container
				text-align center
				margin-top 1em
				
				.form-row
					margin-bottom 10px
					
					input
						text-align center
						color dark-grey
						background-color lighten( blue, 80% )
						border-radius 3px
						font-size 1em
						padding 10px 0
						width 250px
					input.ng-dirty.ng-invalid
						background-color lighten( red, 80% )
						
				.terms
					margin 20px 0
					display flex
					align-items center
					
					input[type="checkbox"]
						width 25px
						height 20px
						margin-right 10px
						
					label
						margin-right 5px
					a
						text-decoration none
						color blue
						
				.form-validation
					position relative
						
					.btn
						background blue
						color light-grey
						font-size 1em
						font-weight 700
						line-height 25px
						padding 10px 0
						text-decoration none
						border-radius 3px
						box-shadow none
						display block
						width 250px
						margin 1em auto 0 auto
						border none
						
					.error
						position absolute
						left 5px
						top 0
						background red
						color light-grey
						font-size 1em
						font-weight 700
						line-height 25px
						padding 10px 0
						border-radius 3px
						display block
						width 250px
						
					.error.ng-inactive
						display none
					
					
				.link
					text-decoration none
					font-size 1em
					color blue
					display block
					margin-top 1em
					
	// Map view
		
	.bar
		display flex
		position absolute
		width 100%
		height 50px
		background dark-grey
		z-index 999999
		box-shadow rest
		
		div
			flex 1
			
			svg
				padding 8px 0 0 5px
				max-width 40px
		h3
			flex 1
			margin-top 0.8em
			text-align center
			
		#drawer-toggle
			flex 1
			text-align right
			background transparent
			padding-right 10px
			border none
			outline none
			
			#burgericon
				
				margin-top 2px

				.frstbar
					transition all 0.1s linear
					transform rotate(0deg)
					transform-origin 1% 48%
					&.open
						transform rotate(45deg)
				
				.thrdbar
					transition all 0.1s linear
					transform rotate(0deg)
					transform-origin 1% 48%
					&.open
						transform rotate(-45deg)
					
				.scndbar
					transition all 0.1s linear
					transform rotate(0deg)
					transform-origin 1% 48%
					&.open
						width 0
						opacity 0
	.mapbtn
		position absolute
		color light-grey
		font-size 1.6em
		width 45px
		height 45px
		background red
		border-radius 25px
		border none
		outline none
		box-shadow active1
		z-index 1
		right 22px
		
		&:active
			box-shadow active3
	
	.ping
		bottom 120px	

	.pin
		bottom 65px	

	.center
		background blue
		bottom 10px
			
	.open
		position absolute
		top 0
		left 0
		
	.close
		position absolute
		top 0
		left -300px	
		
	#drawer
		background light-grey
		color dark-grey
		width 300px
		height 100%
		box-shadow active1
		padding 70px 20px 0 20px
		transition all 0.1s ease-in-out
		display flex
		flex-direction column
		justify-content space-between
		z-index 2
		
		h1
			margin-bottom 0
			font-size 1.2em
		
		.profile
			height 450px
			
			li
				list-style none
				font-weight bold
				line-height 2
				font-size 1.2em
		
		.controls
			display flex
			flex-direction column
			a
				color dark-grey
				font-weight bold
				font-size 1.2em
				text-decoration none
				margin-bottom 20px
			
						
	.angular-google-map-container
		width 100%
		height 100vh
		
		
		
		
	
	
	

					
				
