@import 'variables.styl'

// General

*
	box-sizing border-box

body 
	font-family main
	margin 0
	color light-grey

p, li
	line-height 1.5
	
.shell
	height 100vh
	
	// Landing view

	.container
		display flex
		flex-direction column
		justify-content space-between
		margin 0 auto
		max-width 100%
		min-height 100%
		background dark-grey
			
		.wrapper
			margin 0 auto
			width 300px
			padding 20px 20px 0 20px
			
			.logo
				margin 0 auto 2em auto
				max-width 80px	
				
			svg
				max-width 270px
						
			.btn
				background red
				color light-grey
				font-size 1em
				line-height 25px
				padding 10px 0
				text-decoration none
				border-radius 3px
				box-shadow none
				display block
				width 250px
				margin 1em auto 0 auto
				border none
				
			// Login view & Register view
				
			.form-login
				text-align center
				margin-top 3em
				
				.form-row
					margin-bottom 10px
					
					input
						text-align center
						background-color light-grey
						border-radius 3px
						font-size 1em
						padding 10px 0
						width 250px
						
			.link
				text-decoration none
				font-size 1em
				color light-grey
				display block
				margin-top 1em
				
	footer
		width 100%
				
		div
			display flex
			justify-content space-between
			align-items center
			max-width 250px	
			margin 0 auto
		
			.fa
				font-size 2.5em
				color light-grey
	
					
	// Map view
		
	.bar
		position absolute
		width 100%
		height 50px
		background dark-grey
		z-index 999999
		box-shadow rest
		// display flex
		// justify-content space-between
		div
			display inline-block
			position relative
			top 10
			left 10
			max-width 40px
			height 40px
			z-index 9999999
		h3
			display inline-block
			margin-top 0.7em
		a
			display inline-block
			font-size 2em
			color light-grey
			position relative
			top 10
			right 100
			// margin-before auto
			// margin-after auto
			// margin-right 10px
		
	#map
		width 100%
		height 100%
		
		
		
		
	
	
	

					
				
